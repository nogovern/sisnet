<?xml version="1.0" encoding="UTF-8"?>

<phpunit 
    colors="true" 
    stopOnFailure="false" 
    bootstrap="../application/third_party/CIUnit/bootstrap_phpunit.php">
    <php>
        <const name="CIUnit_Version" value="0.17"/>
        <server name="SERVER_NAME" value="http://example.com" />
    </php>
    <testsuites>
        <testsuite name="UserTests">
            <directory>users</directory>
        </testsuite>
        <testsuite name="CommonTests">
            <directory>common</directory>
        </testsuite>
        <testsuite name="AdminTests">
            <directory>admin</directory>
        </testsuite>
    </testsuites>
</phpunit>
